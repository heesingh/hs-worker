export default {
	async fetch(request, env) {
	  const url = new URL(request.url);
	  const path = url.pathname;
  
	  const email = request.headers.get("Cf-Access-Authenticated-User-Email") || "anonymous@example.com";
	  const timestamp = new Date().toISOString();
	  const country = request.headers.get("Cf-Ipcountry") || "Unknown";
  
	  if (path === "/secure") {
		return new Response(
		  `<html>
			<body>
			  <p>${email} authenticated at ${timestamp} from 
			  <a href="/secure/${country}">${country}</a></p>
			</body>
		  </html>`,
		  { headers: { "Content-Type": "text/html" } }
		);
	  }
  
	  if (path.startsWith("/secure/")) {
		const countryPath = path.split("/")[2];
		const objectKey = `${countryPath.toLowerCase()}.png`; // Images are in the root folder
  
		try {
		  const object = await env.COUNTRY_FLAGS.get(objectKey); // Fetch directly from the root
		  if (!object) {
			return new Response("Flag not found", { status: 404 });
		  }
		  return new Response(object.body, {
			headers: {
			  "Content-Type": "image/png", // Proper content type for images
			},
		  });
		} catch (error) {
		  return new Response("Error fetching flag", { status: 500 });
		}
	  }
  
	  return new Response("Not Found", { status: 404 });
	},
  };
  